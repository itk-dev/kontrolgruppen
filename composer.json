{
    "name":"kontrolgruppen/main",
    "description": "Kontrolgruppen project",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~7.4.0",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-soap": "*",
        "beberlei/doctrineextensions": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "fresh/doctrine-enum-bundle": "^6.3",
        "friendsofsymfony/ckeditor-bundle": "^2.0",
        "itk-dev/serviceplatformen": "0.0.4",
        "knplabs/knp-paginator-bundle": "^3.0",
        "lexik/form-filter-bundle": "^5.0",
        "mpdf/mpdf": "^8.0.2",
        "nyholm/psr7": "^1.4",
        "ocramius/doctrine-batch-utils": "^2.0",
        "onelogin/php-saml": "^3.1",
        "phpoffice/phpspreadsheet": "^1.8",
        "sensio/framework-extra-bundle": "^5.1",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "4.4.*",
        "symfony/config": "4.4.*",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/expression-language": "4.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "4.4.*",
        "symfony/framework-bundle": "4.4.*",
        "symfony/http-client": "4.4.*",
        "symfony/lock": "4.4.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "~1.0",
        "symfony/process": "4.4.*",
        "symfony/security-bundle": "4.4.*",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/translation": "4.4.*",
        "symfony/twig-bundle": "4.4.*",
        "symfony/validator": "4.4.*",
        "symfony/web-link": "4.4.*",
        "symfony/webpack-encore-bundle": "^1.6",
        "symfony/yaml": "4.4.*",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.3",
        "doctrine/doctrine-fixtures-bundle": "^3.1",
        "drenso/phan-extensions": "^2.5",
        "escapestudios/symfony2-coding-standard": "^3.11",
        "friendsofphp/php-cs-fixer": "^2.16",
        "friendsoftwig/twigcs": "^5.0",
        "phan/phan": "^2.4",
        "phpmd/phpmd": "^2.8",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "4.4.*",
        "symfony/css-selector": "4.4.*",
        "symfony/debug-bundle": "4.4.*",
        "symfony/maker-bundle": "^1.0@dev",
        "symfony/monolog-bundle": "^3.0",
        "symfony/phpunit-bridge": "^6.2",
        "symfony/stopwatch": "4.4.*",
        "symfony/web-profiler-bundle": "4.4.*",
        "symfony/web-server-bundle": "4.4.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Kontrolgruppen\\CoreBundle\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        },
        "patches": {
            "doctrine/dbal": {
                "Encrypted table": "core/patches/doctrine/dbal/encrypted-table.patch"
            }
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "ckeditor:install --release=full --tag=4.11.4 --clear=drop --exclude=samples": "symfony-cmd",
            "assets:install %PUBLIC_DIR% --symlink --relative": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check": [
            "@check-coding-standards"
        ],
        "check-coding-standards/php-cs-fixer": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "check-coding-standards/phpcs": [
            "phpcs --standard=phpcs.xml.dist"
        ],
        "check-coding-standards/twigcs": [
            "twigcs --twig-version=2 templates core/Resources/views"
        ],
        "check-coding-standards": [
            "@check-coding-standards/php-cs-fixer",
            "@check-coding-standards/phpcs",
            "@check-coding-standards/twigcs"
        ],
        "apply-coding-standards/php-cs-fixer": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "apply-coding-standards/phpcs": [
            "phpcbf --standard=phpcs.xml.dist"
        ],
        "apply-coding-standards": [
            "@apply-coding-standards/php-cs-fixer",
            "@apply-coding-standards/phpcs"
        ],
        "test-setup": [
            "cp tests/empty.sqlite tests/db_test.sqlite",
            "./bin/console doctrine:schema:update --env=test --force",
            "./bin/console doctrine:fixtures:load --env=test"
        ],
        "phpunit": [
            "@test-setup",
            "./bin/phpunit"
        ],
        "phpunit-coverage": [
            "@test-setup",
            "./bin/phpunit --coverage-text=coverage/report.txt"
        ],
        "phan": [
            "phan --allow-polyfill-parser"
        ],
        "md":[
            "phpmd ./src/ ./core/ text cleancode,codesize,controversial,design,naming,unusedcode --suffixes php"
        ],
        "actions/phpcs": [
            "phpcs --standard=phpcs.xml.dist --report=checkstyle"
        ],
        "actions/phpcsfixer": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --diff --diff-format=udiff"
        ],
        "actions/twigcs": [
            "twigcs --twig-version=2 templates core/Resources/views"
        ],
        "actions/phan": [
            "phan --no-progress-bar --allow-polyfill-parser"
        ],
        "actions/tests": [
            "@phpunit"
        ]
    }
}
