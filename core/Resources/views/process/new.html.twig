{% extends '@KontrolgruppenCore/main/index.html.twig' %}

{% block title %}{{ 'process.new.title'|trans }}{% endblock %}

{% block content %}
    <div class="row form-process-start">
        <div class="col col-md-4">
            <h1 class="headerVisitation">{{ 'process.new.title'|trans }}</h1>

            {{ include('@KontrolgruppenCore/process/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Set variable that triggers that services are loaded for the currently selected process type #}
    <script type="text/javascript">
        window.PROCESS_FORM_JAVASCRIPT_RUN_FIRST = true;
    </script>
    {{ encore_entry_script_tags('processForm') }}
    {{ encore_entry_script_tags('processFormCprSearch') }}
    {{ encore_entry_script_tags('processFormCvrSearch') }}

    {{ encore_entry_script_tags('inputCPR') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .headerVisitation{
            font-size: 25px !important;
            margin-top: 79px;
        }
        .form-process-start{
            margin-left:50px;
        }
        #process{
            margin-top: 50px;
        }
    </style>

{% endblock %}
