<div class="mb-3">
    <div class="row">
        <div class="col">
            <div class="bg-light p-3">
                <div class="col-md-3">
                    <div class="fixed-table">
                        <div class="card-header text-black stam-data">
                            <h6 class="mb-0" id="stam-data">
                                Stamdata
                            </h6>
                        </div>
                        <table class="table table-bordered">
                            <tbody class="stam-data-body">
                                <tr>
                                    <td>Navn</td>
                                    <td>{{ data.Navne[0].Navn.fornavne }} {{ data.Navne[0].Navn.efternavn }}</td>
                                </tr>
                                <tr>
                                    <td>CPR</td>
                                    <td class="cprField">{{ data.Personnumre[0].Personnummer.personnummer }}</td>
                                </tr>
                                <tr>
                                    <td>Adresse</td>
                                    <td>{{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.vejadresseringsnavn }}
                                        {{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.husnummer }}
                                        {{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.etage }}
                                        {{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.sidedoer }}
                                        <br>
                                        {{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.postnummer }}
                                        {{ data.Adresseoplysninger[0].Adresseoplysninger.CprAdresse.postdistrikt }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>KÃ¸n</td>
                                    <td>{{ data.koen }}</td>
                                </tr>
                                <tr>
                                    <td>Eksisterende sager</td>
                                    <td></td>
                                </tr>
                                {# Add more rows as needed #}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mb-3">
                    {% if client.address %}
                        <span class="d-block">
                            <span class="sr-only">{{ 'sidebar.client.address'|trans }}</span>
                            <div>{{ client.address }}</div>
                            <div>{{ client.postalCode }} {{ client.city }}</div>
                        </span>
                    {% endif %}
                    {% if client.telephone %}
                        <span class="d-block"><span class="sr-only">{{ 'sidebar.client.telephone'|trans }}</span>{{ client.telephone }}</span>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <h3>{{ 'sidebar.client.employment'|trans }}</h3>

                    {% if client.receivesPublicAid %}
                        <span class="d-block">{{ 'sidebar.client.receives_public_aid'|trans }}</span>
                    {% endif %}
                    {% if client.employed %}
                        <span class="d-block">{{ 'sidebar.client.employed'|trans }}</span>
                    {% endif %}
                    {% if client.hasOwnCompany %}
                        <span class="d-block">{{ 'sidebar.client.has_own_company'|trans }}</span>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <h3>{{ 'sidebar.client.transport'|trans }}</h3>

                    {% if client.hasDriversLicense %}
                        <span class="d-block">{{ 'sidebar.client.has_drivers_license'|trans }}</span>
                    {% endif %}

                    {% if client.cars|default(false) %}
                        <span class="d-block"><span class="sr-only">{{ 'sidebar.client.cars'|trans }}</span>
                        {% for car in client.cars %}
                            <div>{{ car.registrationNumber }}{% if car.sharedOwnership|default(false) %} ({{ 'sidebar.client.car_shared_ownership'|trans }}){% endif %}</div>
                        {% endfor %}
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
