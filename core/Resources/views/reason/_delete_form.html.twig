<form method="post" action="{{ path('reason_delete', {'id': reason.id}) }}"
      onsubmit="return confirm({{ "'" ~ ('common.actions.confirm.delete'|trans) ~ "'" }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reason.id) }}">
    <button class="btn btn-danger float-right mr-3">{{ 'common.actions.delete'|trans }}</button>
</form>
