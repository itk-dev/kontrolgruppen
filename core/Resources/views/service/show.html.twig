{% extends '@KontrolgruppenCore/main/index.html.twig' %}

{% block title %}{{ 'service.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'service.show.title'|trans }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <tbody>
            <tr>
                <th>{{ 'service.table.name'|trans }}</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>{{ 'service.table.process_types'|trans }}</th>
                <td>
                    {% for processType in service.processTypes %}
                        {{ processType }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('service_index') }}" class="btn btn-light float-left">{{ 'common.back_to_list'|trans }}</a>

    <a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-primary float-right pr-5 pl-5">{{ 'common.actions.edit'|trans }}</a>

    {{ include('@KontrolgruppenCore/service/_delete_form.html.twig') }}
{% endblock %}
