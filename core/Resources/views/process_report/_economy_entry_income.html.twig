<table class="border striped text-small">
    <thead>
    <tr>
        <th class="w-20">{{ 'process_report.report.economy.income.type'|trans }}</th>
        <th class="w-20">{{ 'process_report.report.economy.income.period'|trans }}</th>
        <th class="w-15">{{ 'process_report.report.economy.income.amount'|trans }}</th>
        <th style="text-align: right;">{{ 'process_report.report.economy.income.amount_period'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for economyEntry in economyEntries %}
        <tr>
            <td>{{ economyEntry.incomeType.name }}</td>
            <td>
                {% if economyEntry.periodFrom is not null %}
                    {{ economyEntry.periodFrom|localizeddate('short', 'none') }} - {{ economyEntry.periodTo|localizeddate('short', 'none') }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td>{{ economyEntry.amount|localizedcurrency('DKK') }}</td>
            <td style="text-align: right;">{{ enumTranslation(economyEntry.amountPeriod, 'EconomyEntryAmountPeriodEnumType') }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">{{ 'common.no_records_found'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
