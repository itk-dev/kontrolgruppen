<table class="border striped text-small">
    <thead>
    <tr>
        <th class="w-20">{{ 'process_report.report.economy.service.service'|trans }}</th>
        <th class="w-15">{{ 'process_report.report.economy.service.period'|trans }}</th>
        <th>{{ 'process_report.report.economy.service.amount'|trans }}</th>
        <th>{{ 'process_report.report.economy.service.amount_period'|trans }}</th>
        <th  style="text-align: right;">{{ 'process_report.report.economy.service.repayment_amount'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for economy_entry in economyEntries %}
        <tr>
            <td>{{ economy_entry.service }}</td>
            <td>
                {% if economy_entry.periodFrom is not null %}
                    {{ economy_entry.periodFrom|localizeddate('short', 'none') }} - {{ economy_entry.periodTo|localizeddate('short', 'none') }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td>{{ economy_entry.amount|localizedcurrency('DKK') }}</td>
            <td>{{ enumTranslation(economy_entry.amountPeriod, 'EconomyEntryAmountPeriodEnumType') }}</td>
            <td  style="text-align: right;">{{ economy_entry.repaymentAmount|localizedcurrency('DKK') }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">{{ 'common.no_records_found'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
