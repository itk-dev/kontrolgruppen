<div class="accordion mb-3" id="tableAccordionFounders">
    <div class="card">
        <div class="card-header text-black" id="tableHeadingFounders">
            <h2 class="mb-0">
                <button class="btn btn-block text-left text-black collapsed btn-header " type="button" data-toggle="collapse" data-target="#tableCollapseFounders" aria-expanded="false" aria-controls="tableCollapseFounders">
                    {{ 'visitation.company.founder'|trans }} <i class="iconClass fas fa-sort-down"></i>
                </button>
            </h2>
        </div>
        <div id="tableCollapseFounders" class="collapse" aria-labelledby="tableHeadingFounders" data-parent="#tableAccordionFounders">
            <div class="card-body p-0">
                <table class="table mb-0 table-bordered bg-info">
                    <thead class="data-header">
                        <tr>
                            <th>{{ 'visitation.company.management'|trans }}</th>
                            <th>{{ 'visitation.company.board_of_directors'|trans }}</th>
                            <th>{{ 'visitation.company.founders'|trans }}</th>
                            <th>{{ 'visitation.company.accountant'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody class="bg-light">
                        {# Loop through the data for this table if applicable. Otherwise, statically add rows. #}
                        <tr>
                            <td class="empty-column" colspan="4">{{ "visitation.data.empty"|trans }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
