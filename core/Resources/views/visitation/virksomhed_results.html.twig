{% extends '@KontrolgruppenCore/main/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <h1>{{ 'visitation.search.title'|trans }}</h1>

            <!-- Other tables aligned left -->
            <div class="left-tables">
                {# Adresse historik Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/created_date.html.twig' with {'data': data} %}

                {# Bopælssamling Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/real_owners.html.twig' %}

                {# Bolig Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/registration_history.html.twig' %}

                {# Børn Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/history.html.twig' %}

                {# Civilstatus Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/p_number.html.twig' %}

                {# CPR historik Table #}
                {% include '@KontrolgruppenCore/visitation/company_tables/amount_workers.html.twig' %}
                <div class="new-process">
                    <a href="{{ path('process_new', {clientType: client_type}) }}" class="btn btn-md btn-primary mb-3" class="btn btn-primary">
                        {{ 'visitation.new.title'|trans }}
                    </a>
                </div>
            </div>
        </div>

        <!-- Stamdata Table aligned right -->
        <div class="col-md-4">
            <div class="fixed-table">
                <div class="card-header text-black stam-data">
                    <h6 class="mb-0" id="stam-data">
                        {{ 'visitation.basic_info'|trans }}
                    </h6>
                </div>
                <table class="table table-bordered">
                    <tbody class="stam-data-body">
                        {% if data.virksomhedsnavn.vaerdi is not empty %}
                            <tr>
                                <td>{{ 'visitation.name'|trans }}</td>
                                <td>{{ data.virksomhedsnavn.vaerdi }}</td>
                            </tr>
                        {% endif %}
                        {% if data.virksomhed.CVRNummer is not empty %}
                            <tr>
                                <td>{{ 'visitation.cvr'|trans }}</td>
                                <td id="cvrField">{{ data.virksomhed.CVRNummer }}</td>
                            </tr>
                        {% endif %}
                        {% if data.beliggenhedsadresse.adresse is not empty %}
                            <tr>
                                <td>{{ 'visitation.address'|trans }}</td>
                                <td>
                                    {% if data.beliggenhedsadresse.CVRAdresse_vejnavn is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_vejnavn }}
                                    {% endif %}
                                    {% if data.beliggenhedsadresse.CVRAdresse_husnummerFra is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_husnummerFra }}
                                    {% endif %}
                                    {% if data.beliggenhedsadresse.CVRAdresse_etagebetegnelse is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_etagebetegnelse }}
                                    {% endif %}
                                    {% if data.beliggenhedsadresse.CVRAdresse_doerbetegnelse is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_doerbetegnelse }},
                                    {% endif %}

                                    {% if data.beliggenhedsadresse.CVRAdresse_postnummer is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_postnummer }}
                                    {% endif %}
                                    {% if data.beliggenhedsadresse.CVRAdresse_postdistrikt is not empty %}
                                        {{ data.beliggenhedsadresse.CVRAdresse_postdistrikt }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endif %}
                        {% if data['e-mailadresse'].vaerdi is not empty %}
                            <tr>
                                <td>{{ 'visitation.contact'|trans }}</td>
                                <td>{{ data['e-mailadresse'].vaerdi }}</td>
                            </tr>
                        {% endif %}
                        {% if data.virksomhedsform.vaerdi is not empty %}
                            <tr>
                                <td>{{ 'visitation.company_type'|trans }}</td>
                                <td>{{ data.virksomhedsform.vaerdiTekst }}</td>
                            </tr>
                        {% endif %}
                        {% if data.virksomhed.status is not empty %}
                            <tr>
                                <td>{{ 'visitation.status'|trans }}</td>
                                <td>{{ data.virksomhed.status }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td>{{ 'visitation.relations'|trans }}</td>
                            <td></td>
                            {# <td>{{ data[0].virksomhed.status }}</td> #}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .fixed-table {
            position: fixed;
            top: 120px;
            right: 30px;
            width: 30%;
            z-index: 999;
        }
        .left-tables {
            max-width: 900px;
        }
        .card-header {
            background-color:#c8defc ;
        }
        .card-header.active {
            background-color: #81b4fe;
        }
        .btn-header{
            color: black;
            font-weight: bold;
        }
        .btn-header:hover{
            font-weight: bold;
        }
        .btn-header:focus{
            text-decoration: none;
            box-shadow: none;
        }
        #stam-data{
            font-weight: bold;
        }
        .stam-data{
            background-color: #81b4fe;
        }
        .data-header{
            background-color: #d0dcfc;
        }
        .bg-light{
            background-color: #e8ecfc;
        }
        .pnumber{
            background-color: #e8ecfc;
        }
        .stam-data-body{
            background-color: #e8ecfc;
        }
        .card-header.collapsed .fa-chevron-down {
            transform: rotate(90deg);
        }

        .card-header.active .fa-chevron-up {
            transform: rotate(-90deg);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            const cvrElement = document.getElementById("cvrField");

            $('.accordion .card-header').click(function() {
                $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
            });
            $(document).ready(function() {
                $(".btn-header").click(function() {
                    $(this).closest(".card-header").toggleClass("collapsed active");
                    if($(this).closest(".card-header").hasClass("collapsed")){
                        // Ajax post request to log_visitation route, with data and cpr
                        $.ajax({
                            url: "{{ path('log_visitation') }}",
                            type: "POST",
                            data: {
                                table_name: $(this).closest(".card-header").attr("id"),
                                cvr: cvrElement.innerHTML,
                                visitation: "{{ visitation }}",
                            },
                            success: function(data) {
                                console.log(data);
                            }
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}
