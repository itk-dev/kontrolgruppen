<div class="accordion mb-3" id="tableAccordionBoern">
    <div class="card">
        <div class="card-header text-black" id="tableHeadingBoern">
            <h2 class="mb-0">
                <button class="btn btn-block text-left text-black collapsed btn-header" type="button" data-toggle="collapse" data-target="#tableCollapseBoern" aria-expanded="false" aria-controls="tableCollapseBoern">
                    Børn <i class="fa fa-chevron-down float-right" aria-hidden="true"></i>
                </button>
            </h2>
        </div>
        <div id="tableCollapseBoern" class="collapse" aria-labelledby="tableHeadingBoern" data-parent="#tableAccordionBoern">
            <div class="card-body p-0">
                <table class="table mb-0 table-bordered bg-info">
                    <thead class="data-header">
                        <tr>
                            <th>Fornavn</th>
                            <th>Efternavn</th>
                            <th>Fødselsdag</th>
                            <th>Forældremyndighed</th>
                        </tr>
                    </thead>
                    <tbody class="bg-light">
                        {# Check if data.Person.barn Exists #}
                        {% if data.Person.Barn is defined %}
                            {% for barn in data.Person.Barn %}
                            <tr>
                                <td>{{ barn.Navn.fornavne }} {{ barn.Navn.efternavn }}</td>
                                {% if cprnummer.Personnummer.virkningTil is defined %}
                                    <td>{{ cprnummer.Personnummer.virkningFra|date("m-d-Y") }} til {{ cprnummer.Personnummer.virkningTil|date("m-d-Y") }} </td>
                                {% else %}
                                    <td>{{ cprnummer.Personnummer.virkningFra|date("m-d-Y") }}</td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td class="empty-column" colspan="4">Ingen børn</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>