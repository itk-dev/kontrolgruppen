<div class="accordion mb-3" id="tableAccordionBopaelssamling">
    <div class="card">
        <div class="card-header text-black" id="tableHeadingBopaelssamling">
            <h2 class="mb-0">
                <button class="btn btn-block text-left text-black collapsed btn-header" type="button" data-toggle="collapse" data-target="#tableCollapseBopaelssamling" aria-expanded="false" aria-controls="tableCollapseBopaelssamling">
                    Bop√¶lssamling<i class="iconClass fas fa-sort-down"></i>
                </button>
            </h2>
        </div>
        <div id="tableCollapseBopaelssamling" class="collapse" aria-labelledby="tableHeadingBopaelssamling" data-parent="#tableAccordionBopaelssamling">
            <div class="card-body p-0">
                <table class="table mb-0 table-bordered bg-info">
                    <thead class="data-header">
                        <tr>
                            <th>Navn</th>
                            <th>Dato (fra)</th>
                            <th>Relation</th>
                        </tr>
                    </thead>
                    <tbody class="bg-light">
                        {# Loop through the data for this table if applicable. Otherwise, statically add rows. #}
                        {% if data.Bopaelssamling is defined %}
                            {% for bopaelssamling in data.Bopaelssamling %}
                            <tr>
                                <td>
                                    <form target="_blank" id="cprForm{{ loop.index }}" method="post" action="{{ path('result') }}">
                                        <input type="hidden" name="cpr" value="{{ bopaelssamling.CPR }}">
                                        <a href="#" class="child-name" onclick="document.getElementById('cprForm{{ loop.index }}').submit();">{{ bopaelssamling.Navn }}</a>
                                    </form>
                                </td>
                                <td>{{ bopaelssamling.DatoFra|date("d-m-Y") }}</td>
                                <td>{{ bopaelssamling.Relation }}</td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td class="empty-column" colspan="4">{{ "visitation.data.empty"|trans }}</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
