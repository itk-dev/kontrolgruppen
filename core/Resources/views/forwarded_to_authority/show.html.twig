{% extends '@KontrolgruppenCore/main/index.html.twig' %}

{% block title %}{{ 'forwarded_to_authority.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'forwarded_to_authority.show.title'|trans }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <tbody>
            <tr>
                <th>{{ 'forwarded_to_authority.table.name'|trans }}</th>
                <td>{{ forwarded_to_authority.name }}</td>
            </tr>
            <tr>
                <th>{{ 'forwarded_to_authority.table.process_types'|trans }}</th>
                <td>
                    {% for processType in forwarded_to_authority.processTypes %}
                        {{ processType }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('forwarded_to_authority_index') }}" class="btn btn-light float-left">{{ 'common.back_to_list'|trans }}</a>

    <a href="{{ path('forwarded_to_authority_edit', {'id': forwarded_to_authority.id}) }}" class="btn btn-primary float-right pr-5 pl-5">{{ 'common.actions.edit'|trans }}</a>

    {{ include('@KontrolgruppenCore/forwarded_to_authority/_delete_form.html.twig') }}
{% endblock %}
